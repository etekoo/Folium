<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1 class="text-center"><%= @user.name %>さんのプロフィール</h1>

      <div class="text-center">
        <% if @user.image.attached? %>
          <%= image_tag @user.image.variant(resize: "150x150^"), class: 'mt-2 mb-4', style: 'max-width: 150px; height: auto;' %>
        <% else %>
          <%= image_tag 'user_no_image.png', class: 'mt-2 mb-4', style: 'max-width: 150px; height: auto;' %>
        <% end %>
      </div>

      <div class="mb-3">
        <p><strong>メール:</strong> <%= @user.email %></p>
      </div>
      <div class="mb-3">
        <p><strong>自己紹介:</strong> <%= @user.introduction %></p>
      </div>

      <div class="text-center">
        <%= link_to 'プロフィール編集', edit_public_user_path(@user), class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>