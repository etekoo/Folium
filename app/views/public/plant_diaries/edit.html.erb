<div class="container">
  <div class="row pt-5 justify-content-center">
    <div class="col-md-4">
      <%= form_with(model: @plant_diary, local: true) do |form| %>

        <div class="field">
          <%= form.label :title %>
          <%= form.text_field :title, class: 'form-control' %>
        </div>

        <div class="pt-2 field">
          <%= form.label :content %>
          <%= form.text_area :content, class: 'form-control', rows: 6 %>
        </div>

        <div class="pt-5 actions text-center">
          <%= form.submit '更新する', class: 'btn btn-primary' %>
        </div>

      <% end %>
    </div>
  </div>
</div>
