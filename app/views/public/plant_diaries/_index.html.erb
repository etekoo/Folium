<div class="container">
  <h1 class="text-center">Plant Diaries</h1>

  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= link_to '新規投稿', new_plant_diary_path, class: "btn btn-success mb-3" %>

      <table class="table table-striped">
        <thead>
          <tr>
            <th>Image</th>
            <th>Title</th>
            <th colspan="2">Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @plant_diaries.each do |plant_diary| %>
            <tr>
              <td>
                <% if plant_diary.image.attached? %>
                  <%= image_tag plant_diary.image, class: "img-thumbnail", style: "max-width: 100px; max-height: 100px;" %>
                <% else %>
                  <%= image_tag 'diary_no_image', size: "100x100", class: "img-thumbnail" %>
                <% end %>
              </td>

              <td><%= plant_diary.title %></td>

              <td><%= link_to 'Show', plant_diary, class: "btn btn-info btn-sm" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
