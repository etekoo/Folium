<% if user_signed_in? && plant_diary.favorited_by?(current_user) %>
  <%= link_to plant_diary_favorite_path(plant_diary), method: :delete, remote: true do %>
    <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
    <span class="like-count"><%= plant_diary.favorites.count %> like</span>
  <% end %>
<% elsif user_signed_in? %>
  <%= link_to plant_diary_favorite_path(plant_diary), method: :post, remote: true do %>
    <i class="fa fa-heart-o" aria-hidden="true"></i>
    <span class="like-count"><%= plant_diary.favorites.count %> like</span>
  <% end %>
<% else %>
  <i class="fa fa-heart-o" aria-hidden="true"></i>
  <span class="like-count"><%= plant_diary.favorites.count %> like</span>
<% end %>
