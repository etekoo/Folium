<% if plant_diary.favorited_by?(current_user) %>
  <%= link_to plant_diary_favorite_path(plant_diary), method: :delete do %>
    <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
    <%= plant_diary.favorites.count %> like
  <% end %>
<% else %>
  <%= link_to plant_diary_favorite_path(plant_diary), method: :post do %>
    <i class="fa fa-heart-o" aria-hidden="true"></i>
    <%= plant_diary.favorites.count %> like
  <% end %>
<% end %>