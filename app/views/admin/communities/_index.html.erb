<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>コミュニティ名</th>
      <th>紹介文</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @communities.each do |community| %>
      <tr>
        <td><%= image_tag community.get_image, size:"50x50" %></td>
        <td><%= link_to community.name, admin_community_path(community) %></td>
        <td><%= community.introduction %></td>
        <td>
          <%= link_to 'Destroy', admin_community_path(community), method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-sm btn-outline-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>