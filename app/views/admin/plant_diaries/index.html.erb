<h1>Admin::PlantDiaries#index</h1>
<p>Find me in app/views/admin/plant_diaries/index.html.erb</p>

<div class="container-fluid">


  <div class="row justify-content-center">

    <div class="col-2 border">
    </div>


    <div class="col-md-8">
       <h2 class="">Plant Diaries</h2>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Image</th>
            <th>Title</th>
            <th colspan="2">Actions</th>
          </tr>
        </thead>

        <tbody>
              <% @plant_diaries.each do |admnin_plant_diary| %>
                <tr>
                  <td>
                    <% if admnin_plant_diary.image.attached? %>
                      <%= image_tag admnin_plant_diary.display_image_for_admin, class: "img-thumbnail", style: "max-height: 70px;" %>
                    <% else %>
                      <%= image_tag 'diary_no_image', size: "70x70", class: "img-thumbnail" %>
                    <% end %>

                    <td><%= admnin_plant_diary.title %></td>
                    <td><%= link_to 'Show', admin_plant_diary_path(admnin_plant_diary), class: "btn btn-info btn-sm" %></td>
                    <td><%= link_to 'Delete', admin_plant_diary_path(admnin_plant_diary), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>

                </tr>
              <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
