<% @plant_diaries.each do |plant_diary| %>
  <tr>
    <td>
      <%= image_tag plant_diary.resize_diary_image(50, 50, 'fill'), class: "img-thumbnail" %>
    </td>
    <td><%= plant_diary.title %></td>
    <td><%= link_to plant_diary.user.name, admin_plant_diaries_path(author: plant_diary.user.name) %></td>
    <td><%= plant_diary.created_at.strftime("%Y-%m-%d") %></td>
    <td><%= plant_diary.comments.count %></td>
    <td><%= plant_diary.favorites.count %></td>
    <td><%= link_to 'Show', admin_plant_diary_path(plant_diary), class: "btn btn-info btn-sm" %></td>
    <td><%= link_to 'Delete', admin_plant_diary_path(plant_diary), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
  </tr>
<% end %>
