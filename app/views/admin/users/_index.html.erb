<div class="container-fluid pt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h2>Users List</h2>
      <table class="table">
        <thead>
          <tr>
            <th>Image</th>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Reports Count</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr class="user-row" data-user-id="<%= user.id %>">
              <td><%= image_tag user.resize_profile_image(40, 40, 'fill'), class: "rounded-circle" %></td>
              <td><%= user.id %></td>
              <td><%= link_to user.name, admin_user_path(user) %></td>
              <td><%= user.email %></td>
              <td><%= user.report_count %></td>
              <td><%= user.is_active ? "Active" : "Inactive" %></td>
              <td><%= link_to '編集', edit_admin_user_path(user), class: 'btn btn-outline-primary' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
