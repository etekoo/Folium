<h2>Users List</h2>
  <table class="table">
    <thead>
      <tr>
        <th>Image</th>
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr class="user-row" data-user-id="<%= user.id %>">
          <td><%= image_tag user.resize_profile_image(40, 40, 'fill'), class: "rounded-circle" %></td>
          <td><%= user.id %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.is_active ? "Active" : "Inactive" %></td>
          <td><%= link_to '編集', edit_admin_user_path(user), class: 'btn btn-outline-primary' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>