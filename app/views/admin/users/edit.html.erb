\<h1 class="border-bottom">管理者用ユーザー編集ページ</h1>

<div class="container pt-5">
  <div class="row justify-content-center">
    <div class="col-md-8 pt-5 px-5">
      <%= form_with(model: @user, url: admin_user_path(@user), method: :patch) do |form| %>
        <div class="form-group">
          <%= form.label :name %>
          <%= form.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= form.label :email %>
          <%= form.email_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= form.label :introduction %>
          <%= form.text_area :introduction, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= form.label :is_active %>
          <%= form.check_box :is_active %>
        </div>
        <div class="form-group">
          <%= form.submit '更新', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
