<div class="search_form mb-3">
  <%= form_with url: admin_search_path, method: :get, class: "form-inline" do |f| %>
    <div class="form-group mb-2">
      <div class="input-group">
        <div class="input-group-prepend">
          <span class="input-group-text"><i class="fas fa-search"></i></span>
        </div>
        <%= f.text_field :word, placeholder: "検索キーワードを入力", class: "form-control" %>
      </div>
    </div>
    <div class="form-group mx-sm-2 mb-2">
      <%= f.select :range, [['ユーザー', 'ユーザー'], ['育成記録', '育成記録'], ['コミュニティ', 'コミュニティ']], {}, class: "form-control" %>
    </div>
    <%= f.submit "検索", class: "btn btn-secondary mb-2" %>
  <% end %>
</div>
